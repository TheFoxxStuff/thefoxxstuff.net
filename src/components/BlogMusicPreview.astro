---
import { getSanityImageURL, formatMusicPerv } from '../utils/helpers'

export interface Props {
  music: any;
}

const { music } = Astro.props;
---

<article class="post-preview__article">
    <a href={`/music/${music.slug.current}`}>
      {music.cover && <img width="720" height="420" class="post-main__img" loading="lazy" src={getSanityImageURL(music.cover).url()} />}
      <h1 class="title">{music.title}</h1>
      <time>{formatMusicPerv(music.released)}</time>
    </a>
</article>

<style>
  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover > .title {
    text-decoration: underline;
  }

.post-main__img {
  width: 100%;
  max-width: 600px;
  height: auto;
  margin-bottom: 1rem;
}

.title,
.author,
.publish-date {
  margin: 0;
}

.publish-date,
.author {
  font-size: 1.25rem;
  color: var(--theme-text-lighter);
}

.title {
  font-size: 2.25rem;
  font-weight: 700;
  color: var(--theme-text);
}

</style>
